{
    "compilerOptions": {
      "target": "ES2020",                         // JavaScript version
      "module": "commonjs",                       // Module system
      "outDir": "./build/services",                // Output directory for compiled TypeScript files
      "rootDir": "./src/services",                // Root directory for TypeScript files
      "baseUrl": "./src",                         // Base directory for module resolution
      "strict": true,                             // Enable all strict type-checking options
      "paths": {
        "@services/*": ["services/*"]
        },
      "esModuleInterop": true,                    // Allows default imports for CommonJS modules
      "skipLibCheck": true,                       // Skip type checking of declaration files
      "forceConsistentCasingInFileNames": true    // Ensure consistent casing in file names
    },
    "include": [
      "src/services/**/*.ts"  // Include all TypeScript files in the services folder
    ],
    "exclude": [
      "node_modules",         // Exclude node_modules folder
      "build"                  // Exclude dist folder
    ]
}
  